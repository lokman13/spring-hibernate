<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lok.tables.Categorie" table="categorie" schema="bdd">
        <id name="idCategorie">
            <column name="idCategorie" sql-type="int(11)"/>
        </id>
        <property name="nomCategorie">
            <column name="nomCategorie" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="descCategorie">
            <column name="descCategorie" sql-type="varchar(20)" length="20"/>
        </property>
    </class>
</hibernate-mapping>